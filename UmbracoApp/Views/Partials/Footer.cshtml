@inherits Umbraco.Web.Mvc.UmbracoViewPage
@using Umbraco.Web.Models

@{
    var homePage = Model.AncestorOrSelf<Home>
    ();
    var socialLinks = homePage.Value<IEnumerable<IPublishedElement>>("socialLinks");
}

<footer id="footer" class="border-top">
    <div class="footer-top px-4 px-lg-5">
        <div class="container">
            <div class="row gx-4 gx-lg-5 justify-content-center">
                <div class="footer-info">
                    @if (socialLinks != null && socialLinks.Any())
                    {
                        <div class="social-links mt-3 list-inline text-center">
                            @foreach (var item in socialLinks)
                            {
                                var link = item.Value<Link>("Link");
                                var iconClass = item.Value<string>("iconClass");
                                <a href="@link.Url" class="twitter" target="@link.Target"><i class="@iconClass"></i></a>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="copyright">
            &copy; Copyright <strong><span>@Umbraco.GetDictionaryValue("Footer.CopyrightName")</span></strong>.
        </div>
    </div>
</footer>
